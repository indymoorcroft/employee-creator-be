GET     /       home.HomeController.index

# Employees

GET /employees employee.EmployeeController.getAllEmployees

GET /employees/:id employee.EmployeeController.getEmployeeById(id: Long)

POST /employees employee.EmployeeController.postEmployee

PATCH /employees/:id employee.EmployeeController.patchEmployeeById(id: Long)

DELETE /employees/:id employee.EmployeeController.deleteById(id: Long)


# Contracts

GET /contracts/:id contract.ContractController.getContractById(id: Long)

GET /employees/:id/contracts contract.ContractController.getEmployeeContractById(id: Long)

POST /employees/:id/contracts contract.ContractController.addContractForEmployee(id: Long)

PATCH /contracts/:id contract.ContractController.patchContractById(id: Long)

DELETE /contracts/:id contract.ContractController.deleteContractById(id: Long)